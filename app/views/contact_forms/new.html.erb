<%= form_for(@contact_form) do |f| %>
<% if @contact_form.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@contact_form.errors.count, "error") %> prohibited this author from being saved:</h2>

	<ul>
		<% @contact_form.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<fieldset>

	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :message %>
		<%= f.text_field :message %>
	</div>
	<div>
		<%= f.label :nickname, :class => 'hidden' %>
		<%= f.hidden_field :nickname %>
	</div>
	<div>
		<%= f.submit "Submit", :class => "btn btn-primary"%>
	</div>
	<% end %>

</fieldset>
