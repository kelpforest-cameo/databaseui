<div class="container">

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		
		<div class="row-fluid">
			<div class=span12">
				<h2 style="text-align: center">Sign up</h2>
				<div class="row-fluid">
				
					<div class="span4 offset3">
					
						<div>
							<br />
							<%= f.label :first_name %>
							<%= f.text_field :firstname, :autofocus => true %>
						</div>
						
						<div>
							<br />
							<%= f.label :username %>
							<%= f.text_field :username %>
						</div>
						
						<div> 
							<br />
							<%= f.label :password %>
							<%= f.password_field :password %>
						</div>
						
						<div>
							<br />
							<%=f.label :project_id %>
							<%= f.select(project_names) %>
						</div>
					</div> <!-- end span6 -->

					<div class="span4">
						
						<div>
							<br />
							<%= f.label :last_name %>
							<%= f.text_field :lastname %>
						</div>
						
						<div>
							<br />
							<%= f.label :email %>
							<%= f.email_field :email %>
						</div>

						<div>
							<br />
							<%= f.label :password_confirmation %>
							<%= f.password_field :password_confirmation %>
						</div>
						
						<div>
							<%= f.submit "Sign up" %> 
						</div>
						<%= render "devise/shared/links" %>
						<% end %>
					</div> <!-- end span6 -->
				</div> <!-- end row-fluid -->
			</div>
		</div> <!-- end span12 -->
	</div>
</div>
