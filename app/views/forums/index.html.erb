<div class="span10">
<h1 style="margin-top:30px; margin-left:130px">Forum</h1>
</div>

<div class="span10" style="margin-left:130px">
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td><%= forum.name %></td>
    <td><%= forum.title %></td>
    <td><%= forum.comment %></td>
    <td><%= link_to 'Show', forum %></td>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br /><br \>

<div>
<%= button_to 'New Post', new_forum_path, :method => :get %>
</div>
</div>