<!doctype html>
<html>

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= content_for?(:title) ? yield(:title) : "Food Web Builder" %></title>
        <meta name="description" content="">
        <meta name="author" content="">
        <%= stylesheet_link_tag "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
        <%= yield(:head) %>
    </head>
    <body>
        <div id="wrap">
            <header class="navbar navbar-fixed-top">
                <nav class="navbar-inner">
                    <div class="container">
                        <ul class="nav pull-left">
                            <%= render 'layouts/navigation' %>
                        </ul>
                    </div>
                </nav>
            </header>
            <div id="main" role="main">
                <div class="container" style="margin-top:40px">
                    <div class="content">
                        <div class="row-fluid">
                            <div class="span12">
                                <%= render 'layouts/messages' %>
                                <%= yield %>
                            </div>
                        </div>
                    </div>
                </div>
                <!--! end of .container -->
                <div id="push"></div>
            </div>
            <!--! end of #main -->
        </div>
        <div id="footer">
            <div class="container">
                <p class="text-info credit text-center">
                    Some footer place holder text here...
                </p>
            </div>
        </div>
        <%= yield :scripts %>
    </body>
</html>
